<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_general_terms_and_confition_wizard_form" model="ir.ui.view">
        <field name="name">purchase.general.terms.condition.view</field>
        <field name="model">purchase.general.terms.condition</field>
        <field name="arch" type="xml">
            <form string="Terms &amp; Conditions">
                <group>
                    <field name="purchase_general_terms_condition" widget="html" options="{'style-inline': true}"/>
                </group>
                <footer>
                    <button class="btn-primary" name="update_terms" type="object" string="Save"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
